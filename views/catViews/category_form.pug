extends ../layout
block content 
    h1= title 

    form(method="POST" action="")
        div.form-group
            label(for='name') Category Name:
            input#name.form-control(type='text' placeholder='Name' name='name' required='true' value=(undefined===category ? '' : category.name) )

            label(for='description') Description:
            textarea#name.form-control(type='text' placeholder='Description' name='description' value=(undefined===category ? '' : category.description) )

        button.btn.btn-primary.mt-1(type='submit') Submit

    if errors
        ul
          for error in errors
            li!= error.msg
