extends ../layout 

block content 
    h1= title 
    p #[strong ] #{catDetails.description}

    ul 
        each item in category_items
            li  
               | #{item.name} - #[em In Stock:] #{item.in_stock}   
               a(href=item.url) get it from here

        else 
            li We are out of stock, visit us later...